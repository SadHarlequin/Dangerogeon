<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:background="@drawable/prepare"
    tools:ignore="MissingDefaultResource">


    <Button
            android:id="@+id/BackButtonPrepare"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="Back"
            android:background="@drawable/back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.053" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.885"/>
    <Button
            android:id="@+id/startButton"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="Begin"
            android:background="@drawable/arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.912"
            app:layout_constraintVertical_bias="0.885"/>

</androidx.constraintlayout.widget.ConstraintLayout>